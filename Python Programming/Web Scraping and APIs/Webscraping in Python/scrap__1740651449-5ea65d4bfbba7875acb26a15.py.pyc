# Import the Selenium WebDriver module for interacting with browsers
from selenium import webdriver

# Import the Service class to configure and manage the ChromeDriver service
from selenium.webdriver.chrome.service import Service

# Import the By class for locating elements on a web page
from selenium.webdriver.common.by import By

# Import ChromeDriverManager from webdriver-manager to automatically install the correct ChromeDriver version
from webdriver_manager.chrome import ChromeDriverManager

# Import the time module to add delays for observation or waiting for actions to complete
import time



# Set up the Chrome WebDriver
service = Service(ChromeDriverManager().install())
driver = webdriver.Chrome(service=service)



